@model CountryListViewModel
@{
    ViewData["Title"] = "Olympic Countries";
    
}

<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Games</h3>
        <div class="list-group">
            @foreach (Game game in Model.Games)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@game.GameID"
                   asp-route-activeSport="@Model.ActiveSport"
                   class="list-group-item
                       @Model.CheckActiveGame(game.GameID)">@game.GName</a>
                }
        </div>
        <h3 class="mt-3">Sports</h3>
        <div class="list-group">
            @foreach (Sport sport in Model.Sports)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@Model.ActiveGame"
                   asp-route-sport="@sport.SportID"                   
                   class="list-group-item
                       @Model.CheckActiveSport(sport.SportID)">@sport.SportName</a>
                }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Country country in Model.Countries)
            {
                <li class="list-inline-item">
                    <form asp-action="Details" method="post">
                        <button class="bg-white border-0" type="submit">
                            <img src="~/images/@country.CountryImage" alt="@country.Name"
                                 title="@country.Name | @country.Game.GName| @country.Sport.SportName" />
                        </button>
                        <input type="hidden" asp-for="@country.CountryID" />
                        <input type="hidden" asp-for="ActiveSport" />
                        <input type="hidden" asp-for="ActiveGame" />                        
                    </form>
                </li>
            }
        </ul>
    </div>
</div>