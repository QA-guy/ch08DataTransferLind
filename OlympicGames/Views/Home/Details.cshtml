@model CountryViewModel
@{ 
    ViewData["Title"] = "Country Details";
}

<h2 class="text-center p-2">Country Details</h2>

<div class="row">
    <div class="col-6 offset-3">
        <ul class="list-group text-center">
            <li class="list-group-item">
                <img src="~/images/@Model.Country.CountryImage" alt="" />
                <h3>@Model.Country.Name</h3>
            </li>
            <li class="list-group-item">
                <h4>Sport: @Model.Country.Sport.SportName</h4>
            </li>
            <li class="list-group-item">
                <h4>Games: @Model.Country.Game.GName</h4>
            </li>
            <li class="list-group-item">
                <form asp-action="Add" method="post">
                    <a asp-action="Index" class="btn btn-primary"
                       asp-route-activeSport="@Model.ActiveSport"
                       asp-route-activeGame="@Model.ActiveGame">Return to Home Page</a>
                    <button type="submit" class="btn btn-primary">
                        Add to Favorites
                    </button>
                    <input type="hidden" asp-for="@Model.Country.CountryID" />
                </form>
            </li>
        </ul>
    </div>
</div>